<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>contact List </h3>
          <a href="/contact_lists/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Contact</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Phone</th>
              <th class="text-center">Email</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < contact_lists.length; count++) { %>
            <tr>
              <td class="text-center"><%= contact_lists[count].name %></td>
              <td class="text-center"><%= contact_lists[count].phone %></td>
              <td class="text-center"><%= contact_lists[count].email %></td>
              <td class="text-center">
              <a href="/contact_lists/<%= contact_lists[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
               </td>
              <td class="text-center">
              <a href="/contact_lists/delete/<%= contact_lists[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


